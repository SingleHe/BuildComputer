<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ComputerBuilderController">

    <stylesheets>
        <URL value="@computerbuilder.css" />
    </stylesheets>
    <children>
        <ImageView fitHeight="360.0" fitWidth="480.0" nodeOrientation="INHERIT" VBox.vgrow="ALWAYS">
         <image>
            <Image url="@/view/parts.jpg" />
         </image>
        </ImageView>
        <Label styleClass="h1" text="Computer Builder" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
        </Label>
        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <Button fx:id="btnViewCatalogue" styleClass="largeButton,button" text="View Catalogue" textAlignment="CENTER" wrapText="true" onAction="#viewCatalogue"></Button>
            <Button fx:id="btnViewBuild" styleClass="button,largeButton" text="View Build" textAlignment="CENTER" wrapText="true" onAction="#viewBuild" />
        </HBox>
        <Button fx:id="btnQuit" styleClass="button" text="Quit" VBox.vgrow="ALWAYS" onAction="#quit">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </Button>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
