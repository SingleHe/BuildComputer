<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <URL value="@computerbuilder.css" />
    </stylesheets>
    <children>
        <ImageView fitHeight="360.0" fitWidth="480.0" VBox.vgrow="ALWAYS">
         <image>
            <Image url="@/view/parts.jpg" />
         </image>
        </ImageView>
        <Label styleClass="h1" text="Computer Builder" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
        </Label>
        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <Button styleClass="largeButton,button" text="View Catalogue" textAlignment="CENTER" wrapText="true" />
            <Button styleClass="button,largeButton" text="View Build" textAlignment="CENTER" wrapText="true" />
        </HBox>
        <Button styleClass="button" text="Quit" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </Button>
    </children>
</VBox>
