<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300" prefWidth="500" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

	<stylesheets>
		<URL value="@computerbuilder.css" />
	</stylesheets>
	<children>
		<TableView styleClass="table-view">
			<columns>
				<TableColumn text="Type" />
				<TableColumn text="Name" />
				<TableColumn text="Price" />
				<TableColumn />
			</columns>
		</TableView>
        <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Total:" textAlignment="JUSTIFY" VBox.vgrow="ALWAYS" />
            <Label fx:id="labTotal">
            <HBox.margin>
               <Insets left="5.0" right="5.0" />
            </HBox.margin>
            </Label>
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin>
        </HBox>
		<Button fx:id="btnCheckBuild" styleClass="button" text="Check Build">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
		<Button fx:id="btnRemoveFromBuild" styleClass="button" text="Remove Selected from Build">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
		<Button fx:id="btnCloseBuild" styleClass="button" text="Close" />
	</children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
